@model AiTeknikServis.Entities.Dtos.EmailVerification.EmailVerificationVerifyDto
@{
    ViewData["Title"] = "Kullanıcı Oluşturma - Email Doğrulama";
    var email = ViewBag.Email as string;
    var userType = ViewBag.UserType as string;
    var typeDisplayName = ViewBag.TypeDisplayName as string;
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>
                        @typeDisplayName - Email Doğrulama
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="text-center mb-4">
                                <i class="fas fa-shield-alt fa-3x text-info mb-3"></i>
                                <h5>Güvenlik Doğrulaması</h5>
                                <p class="text-muted">
                                    <strong>@email</strong> adresine gönderilen doğrulama kodunu giriniz.
                                </p>
                            </div>

                            <form asp-action="VerifyUserCreation" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                
                                <input type="hidden" asp-for="Email" value="@email" />
                                <input type="hidden" asp-for="Type" value="@EmailVerificationType.UserCreation" />
                                <input type="hidden" name="userType" value="@userType" />

                                <div class="mb-3">
                                    <label asp-for="VerificationCode" class="form-label">Doğrulama Kodu</label>
                                    <input asp-for="VerificationCode" 
                                           class="form-control form-control-lg text-center" 
                                           placeholder="000000" 
                                           maxlength="6" 
                                           style="letter-spacing: 0.5em; font-size: 1.5rem;"
                                           autocomplete="off" />
                                    <span asp-validation-for="VerificationCode" class="text-danger"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        6 haneli sayısal kodu giriniz
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-info btn-lg">
                                        <i class="fas fa-check me-2"></i>
                                        Doğrula ve @userType Oluştur
                                    </button>
                                </div>
                            </form>

                            <hr class="my-4">

                            <div class="text-center">
                                <p class="text-muted mb-2">Kod gelmedi mi?</p>
                                <form asp-action="ResendUserCreationCode" method="post" class="d-inline">
                                    <input type="hidden" name="email" value="@email" />
                                    <input type="hidden" name="userType" value="@userType" />
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-redo me-1"></i>
                                        Yeniden Gönder
                                    </button>
                                </form>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="alert alert-info" role="alert">
                                <h6><i class="fas fa-info-circle me-2"></i>Güvenlik Bilgileri</h6>
                                <ul class="mb-0">
                                    <li>Doğrulama kodu 15 dakika geçerlidir</li>
                                    <li>En fazla 3 kez yanlış kod girebilirsiniz</li>
                                    <li>Bu işlem @userType oluşturma yetkisi gerektirir</li>
                                    <li>Spam klasörünüzü kontrol etmeyi unutmayın</li>
                                </ul>
                            </div>

                            <div class="alert alert-warning" role="alert">
                                <h6><i class="fas fa-exclamation-triangle me-2"></i>Önemli Uyarı</h6>
                                <p class="mb-0">
                                    Bu doğrulama kodu sadece <strong>@typeDisplayName</strong> işlemi için geçerlidir. 
                                    Doğrulama tamamlandıktan sonra kullanıcı otomatik olarak oluşturulacaktır.
                                </p>
                            </div>

                            @if (userType == "Manager")
                            {
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6><i class="fas fa-user-tie me-2"></i>Manager Yetkileri</h6>
                                        <ul class="small mb-0">
                                            <li>Servis taleplerini yönetme</li>
                                            <li>Teknisyen atama</li>
                                            <li>Raporları görüntüleme</li>
                                            <li>Müşteri yönetimi</li>
                                        </ul>
                                    </div>
                                </div>
                            }
                            else if (userType == "Technician")
                            {
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6><i class="fas fa-tools me-2"></i>Teknisyen Yetkileri</h6>
                                        <ul class="small mb-0">
                                            <li>Atanan servis taleplerini görme</li>
                                            <li>Talep durumunu güncelleme</li>
                                            <li>Çözüm raporları yazma</li>
                                            <li>Müşteri ile iletişim</li>
                                        </ul>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="@Url.Action("Dashboard", "Admin")" class="text-muted">
                    <i class="fas fa-arrow-left me-1"></i>
                    Admin paneline dön
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Doğrulama kodu input'una sadece rakam girişi
            $('#VerificationCode').on('input', function() {
                this.value = this.value.replace(/[^0-9]/g, '');
            });

            // Otomatik focus ve format
            $('#VerificationCode').on('keyup', function() {
                var value = $(this).val();
                if (value.length === 6) {
                    $(this).addClass('is-valid');
                } else {
                    $(this).removeClass('is-valid');
                }
            });

            // Form submit'te loading göster
            $('form[asp-action="VerifyUserCreation"]').on('submit', function() {
                var submitBtn = $(this).find('button[type="submit"]');
                var userType = '@userType';
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Doğrulanıyor ve ' + userType + ' Oluşturuluyor...');
            });

            // Yeniden gönder butonuna loading ekle
            $('form[asp-action="ResendUserCreationCode"]').on('submit', function() {
                var submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-1"></i>Gönderiliyor...');
            });
        });
    </script>
}