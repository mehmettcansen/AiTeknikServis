@model AiTeknikServis.Entities.Models.ServiceStatus

@{
    var badgeClass = Model switch
    {
        AiTeknikServis.Entities.Models.ServiceStatus.Pending => "bg-warning",
        AiTeknikServis.Entities.Models.ServiceStatus.InProgress => "bg-info",
        AiTeknikServis.Entities.Models.ServiceStatus.Completed => "bg-success",
        AiTeknikServis.Entities.Models.ServiceStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };
    
    var icon = Model switch
    {
        AiTeknikServis.Entities.Models.ServiceStatus.Pending => "fas fa-clock",
        AiTeknikServis.Entities.Models.ServiceStatus.InProgress => "fas fa-spinner",
        AiTeknikServis.Entities.Models.ServiceStatus.Completed => "fas fa-check",
        AiTeknikServis.Entities.Models.ServiceStatus.Cancelled => "fas fa-times",
        _ => "fas fa-question"
    };
    
    var text = Model switch
    {
        AiTeknikServis.Entities.Models.ServiceStatus.Pending => "Bekliyor",
        AiTeknikServis.Entities.Models.ServiceStatus.InProgress => "İşlemde",
        AiTeknikServis.Entities.Models.ServiceStatus.Completed => "Tamamlandı",
        AiTeknikServis.Entities.Models.ServiceStatus.Cancelled => "İptal Edildi",
        _ => "Bilinmiyor"
    };
}

<span class="badge @badgeClass">
    <i class="@icon me-1"></i>@text
</span>